@model IEnumerable<Model.Tickettable>

@{
    ViewBag.Title = "Ticketdetails";
    Layout="~/Views/Shared/_CommonLayout.cshtml";
}

<link href="~/Content/Sidebar.css" rel="stylesheet" />




<div class="Ticketscards">
    <div class="ticketcard1">
        <h1>Open Tickets</h1>
    </div>
    <div class="ticketcard1" style="background-color:darkolivegreen">
        <h1>In Progress Tickets</h1>
    </div>
    <div class="ticketcard1" style="background-color:indianred">
        <h1>Closed Tickets</h1>
    </div>

</div>
<div class="table-wrapper">
    <table class="fl-table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Subject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remarks)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dept_Name)
                </th>

               <th>
                        @Html.DisplayNameFor(model => model.Usertable.Name)
                    </th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remarks)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>s
                        @Html.DisplayFor(modelItem => item.Dept_Name)
                    </td>
                    @*<td>
                            @html.displayfor(modelitem => item.departementtable.dept_name)
                        </td>*@
                    <td>
                            @Html.DisplayFor(modelItem => item.Usertable.Name)
                        </td>
                    <td class="designedit">
                        @Html.ActionLink("Edit", "TicketEdit", new { id = item.TicketId }, new { id = "tiid" })

                        @Html.ActionLink("Delete", "Delete", new { id = item.TicketId }, new { id = "deletebutton" })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
